generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(ulid())

  name        String
  slug        String  @unique
  series      String?
  description String?
  price       Int
  category    String
  imgUrl      String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
